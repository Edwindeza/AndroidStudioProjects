<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/primary_text"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:text="ÍNDICE DE RAYOS UV: "
                android:id="@+id/name_account"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:padding="3dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/primary_text"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:text="ÍNDICE DE RAYOS UV: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/red"
                    android:textSize="@dimen/secondary_text"
                    android:id="@+id/tv_uv"
                    android:text="Muy Alto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:padding="3dp"

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="TIEMPO MÁXIMO DE EXPOSICIÓN DIRECTA AL SOL: "
                    android:textSize="@dimen/primary_text"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="10 minutos"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/secondary_text"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:padding="3dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/primary_text"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:text="PROTECCIÓN SUGERIDA:  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="100"
                    android:id="@+id/tv_suggestion"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/secondary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:textSize="@dimen/aux_text"
                android:textColor="@color/colorPrimary"
                android:gravity="left"
                android:id="@+id/optional"
                android:padding="10dp"
                android:text="Si deseas tener consejos más personalizados, registrate con nosotros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
       </FrameLayout>
</LinearLayout>